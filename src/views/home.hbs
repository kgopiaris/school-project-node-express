{{#each posts}}
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">Author: {{this.Writer.firstName }} {{this.Writer.lastName}}</h6>
    <p class="card-text">{{this.content}}</p>
  </div>
</div>
{{/each}}