<div class="jumbotron">
  <h1 class="display-4">Hello, world!</h1>
  <p class="lead">Welcome to the School management portal.</p>
  <hr class="my-4">

  {{{view_btn_str}}}

  {{!-- <a class="btn btn-primary btn-lg" href="/author/login" role="button">Author Login</a> --}}
